<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="inpostinternational_create_shipment">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">inpostinternational_create_shipment</item>
                        <item name="label" xsi:type="string" translate="true">Create InPost International shipment</item>
                        <item name="url" xsi:type="url" path="inpostinternational/shipment/massCreateShipment"/>
                    </item>
                </argument>
            </action>
            <action name="inpostinternational_get_inpostshipment_labels">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">inpostinternational_get_inpostshipment_labels</item>
                        <item name="label" xsi:type="string" translate="true">Get InPost International shipment labels</item>
                        <item name="url" xsi:type="url" path="inpostinternational/shipment/massGetInPostLabelsFromOrders"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
